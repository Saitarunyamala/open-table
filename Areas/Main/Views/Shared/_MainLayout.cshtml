@{
    Layout = "_Layout";  // This layout inherits from _Layout.cshtml
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OpenTable</title>
    <link rel="stylesheet" href="site.css">
    <style>
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .logo a {
            font-size: 2rem; /* Larger logo font size */
            font-weight: bold;
            text-decoration: none;
        }

        .logo {
            margin-bottom: 20px; /* Space below the logo */
        }

        /* Dropdown positioned below the logo */
        .dropdown-container {
            margin-top: 10px; /* Adds space between logo and dropdown */
            align-self: flex-start; /* Align the dropdown left under the logo */
        }

        .nav-right {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .nav-right a {
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div>
                <div class="logo">
                    <a href="/">
                        <img src="~/images/LOGO.PNG" alt="OpenTable Logo" style="width: 200px; height: auto;">
                    </a>
                

                </div>

                <!-- Dropdown below the logo, left-aligned -->
                <div class="dropdown-container">
                    <select id="citySelect">
                        <option>Atlanta</option>
                        <option>Boston</option>
                        <option>Charlotte</option>
                        <option>Chicago</option>
                        <option>Houston</option>
                        <option>Los Angeles</option>
                        <option>Miami</option>
                        <option>New York</option>
                        <option>Phoenix</option>
                        <option>San Francisco</option>
                    </select>
                </div>
            </div> 
                    <a href="~/Main/FindATable/List">Find a Table</a> 
                    <a href="~/Main/Reservation/Manage">Manage Reservation</a>

            <!-- Navigation links aligned right -->
            <div class="nav-right">
                <a href="~/Main/Mobile/List">Mobile</a>
                <a href="/Admin/Home/Index">Admin</a>
                <a href="~/Main/FAQs/Questions">FAQs</a>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()  <!-- This ensures views are rendered inside the layout -->
    </main>
</body>
</html>